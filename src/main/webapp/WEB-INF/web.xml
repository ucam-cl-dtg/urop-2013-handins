<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" [
<!ENTITY frontend SYSTEM "frontend.xml">
]>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
  <context-param>
    <param-name>cssNamespace</param-name>
    <param-value></param-value>
  </context-param>
  
  <context-param>
    <param-name>cssFiles</param-name>
    <param-value></param-value>
  </context-param>
  
  <context-param>
    <param-name>jsFiles</param-name>
    <param-value>/js/vendor/jquery.form.min.js,/js/handins/main.js,/js/handins/l10n.js,/js/vendor/pdf.js,/js/handins/viewer.js,/js/handins/pdf-selector.js,/soy/js/1/handins.submission.js,/soy/js/1/handins.bin.js,/soy/js/1/handins.marking.js,/soy/js/1/shared.handins.js,/soy/js/1/shared.handins.generic.js,/soy/js/1/main.js</param-value>
  </context-param>

	<filter>
		<filter-name>Hibernate</filter-name>
		<filter-class>uk.ac.cam.sup.HibernateSessionRequestFilter</filter-class>
	</filter>
	<!-- Include this for the raven filter -->
	<filter>
		<filter-name>ravenFilter</filter-name>
		<filter-class>uk.ac.cam.ucs.webauth.RavenFilter</filter-class>
	</filter>

	<!-- Include this for the Hibernate filter -->
	<filter>
		<filter-name>Hibernate</filter-name>
		<filter-class>uk.ac.cam.sup.HibernateSessionRequestFilter</filter-class>
	</filter>

	<filter>
		<filter-name>Htmleasy</filter-name>
		<filter-class>com.googlecode.htmleasy.HtmleasyFilterDispatcher</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>uk.ac.cam.sup.MethodDemos</param-value>
		</init-param>
	</filter>

	<!-- Include for raven filter (url-pattern set to /* for securing all
	pages of the website with raven -->
	<filter-mapping>
		<filter-name>ravenFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Hibernate</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Htmleasy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

  &frontend;
</web-app>
